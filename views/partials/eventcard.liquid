<article id="filtered-events-container" class="event-cards-parent-container">

  {% for event in events %}
    <section class="card-child-container">
      <figure class="card-image-container">
        {% if event.photo and event.photo.id %}
          <img
            class="card-image"
            src="https://fdnd-agency.directus.app/assets/{{ event.photo.id }}"
            alt="{{ event.title }}"
            width="{{ event.photo.width }}"
            height="{{ event.photo.height }}">
        {% else %}
          <img
            class="card-image"
            src="/assets/Image.png"
            alt="Afbeelding niet beschikbaar">
        {% endif %}

        <figcaption class="image-caption">
          {% if event.title %}
            {{ event.title | split: " " | slice: 0, 2 | join: " " | upcase }}
          {% else %}
            NADER BEPAALD
          {% endif %}
        </figcaption>
      </figure>

      {% assign event_date = event.date | default: '2024-01-01' %}
      <time class="event-time-stamp" datetime="{{ event_date | date: '%Y-%m-%d' }}">
        <span>
          {% if event.date %}
            {{ event.date | upcase }}
          {% else %}
            NADER BEPAALD
          {% endif %}
        </span>
        <span>
          {% if event.location %}
            / {{ event.location | upcase }}
          {% else %}
            / NADER BEPAALD
          {% endif %}
        </span>
      </time>

      <h3 class="event-card-title">
        {% if event.title %}
          {{ event.title | upcase }}
        {% else %}
          NADER BEPAALD
        {% endif %}
      </h3>

      <a class="card-button button-text" href="/events/detail-event/{{ event.id }}">
        Details
        <svg class="arrow-logo" width="17" height="16" viewBox="0 0 17 16" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M8.5 13L3.4999 7.9999L8.5 2.99979" stroke="#364bf7" stroke-width="1.5" stroke-miterlimit="4.62023"/>
          <path d="M13.5 8L3.5 8" stroke="#222226" stroke-width="1.5" stroke-miterlimit="4.62023" stroke-linejoin="round"/>
        </svg>
      </a>
    </section>
  {% endfor %}

</article>
